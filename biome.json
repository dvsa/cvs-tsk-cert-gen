{
	"extends": ["@dvsa/biome-config/biome"],
	"linter": {
		"rules": {
			"suspicious": {
				"noExplicitAny": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noUselessCatch": "off",
				"noThisInStatic": "off"
			},
			"correctness": {
				"noSwitchDeclarations": "off"
			},
			"style": {
				"noUnusedTemplateLiteral": "off",
				"noNonNullAssertion": "off",
				"noUselessElse": "off",
				"useTemplate": "off",
				"useNodejsImportProtocol": "off"
			}
		}
	}
}
